@model CompleteApp.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>
<hr />

<div>
    <h5>Informação somente leitura</h5>
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 428px" />
        </div>
        <div class="col-md-6">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Categoria.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd>
                    @Model.Valor.ToString("C")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>
            <div>
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </div>
    </div>
</div>


